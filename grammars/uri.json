{
  "name": "uri",
  "patterns": [
    {
      "include": "#root"
    }
  ],
  "repository": {
    "root": {
      "patterns": [
        {
          "include": "#start"
        }
      ],
      "end": "\n"
    },
    "start": {
      "patterns": [
        {
          "include": "#datauri"
        },
        {
          "include": "#mailto"
        },
        {
          "include": "#windows-driver"
        },
        {
          "include": "#double-slash"
        },
        {
          "include": "#scheme"
        },
        {
          "include": "#relative-path"
        },
        {
          "include": "#path"
        }
      ]
    },
    "path": {
      "patterns": [
        {
          "include": "#encoded-char"
        },
        {
          "include": "#separator"
        },
        {
          "include": "#extension"
        },
        {
          "include": "#query"
        },
        {
          "include": "#fragment"
        }
      ]
    },
    "windows-driver": {
      "match": "(^[a-zA-Z])(:\\\\)",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        },
        "2": {
          "name": "punctuation.separator.uri"
        }
      }
    },
    "scheme": {
      "match": "(^[a-zA-Z][a-zA-Z0-9+.-]*)(:[/\\\\]*)([^/\\\\]*)",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        },
        "2": {
          "name": "punctuation.separator.uri"
        },
        "3": {
          "patterns": [
            {
              "include": "#host-user"
            },
            {
              "include": "#hostname"
            },
            {
              "include": "#port"
            }
          ]
        }
      }
    },
    "double-slash": {
      "match": "^(:?//)([^/\\\\]*)",
      "captures": {
        "1": {
          "name": "punctuation.separator.uri"
        },
        "2": {
          "patterns": [
            {
              "include": "#host-user"
            },
            {
              "include": "#hostname"
            },
            {
              "include": "#port"
            }
          ]
        }
      }
    },
    "relative-path": {
      "match": "^([.~#]+)",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        }
      }
    },
    "mailto": {
      "match": "^(mailto)(:)(.*)(@)?(.*)$",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        },
        "2": {
          "name": "punctuation.separator.uri"
        },
        "3": {},
        "4": {
          "name": "keyword.operator.uri.at"
        },
        "5": {
          "name": "type.identifier.uri.extension"
        }
      }
    },
    "host-user": {
      "match": "([^:@]+)(:)([^:@]+)(@)",
      "captures": {
        "1": {
          "name": "property.user.uri"
        },
        "2": {
          "name": "punctuation.separator.uri"
        },
        "3": {
          "name": "identifier.password.uri"
        },
        "4": {
          "name": "keyword.operator.uri.at"
        }
      }
    },
    "hostname": {
      "match": "([^:]+)",
      "name": "entity.name.uri.hostname"
    },
    "port": {
      "match": "(:)([0-9]+)",
      "captures": {
        "1": {
          "name": "punctuation.separator.uri"
        },
        "2": {
          "name": "number.uri.port"
        }
      }
    },
    "separator": {
      "match": "[/\\\\]",
      "name": "punctuation.separator.uri"
    },
    "encoded-char": {
      "match": "(%)([0-9a-fA-F]{2})",
      "captures": {
        "1": {
          "name": "punctuation.definition.string.begin.uri"
        },
        "2": {
          "name": "constant.character.uri.encoded"
        }
      }
    },
    "extension": {
      "match": "(\\.[a-zA-Z0-9]+)$",
      "name": "type.identifier.uri.extension"
    },
    "datauri": {
      "match": "(^data)(:)([\\w/]+)([;,])(.*)$",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        },
        "2": {
          "name": "punctuation.separator.uri"
        },
        "3": {
          "name": "keyword.operator.uri.mime"
        },
        "4": {
          "name": "punctuation.separator.uri"
        },
        "5": {
          "patterns": [
            {
              "include": "#base64"
            },
            {
              "include": "#path"
            }
          ]
        }
      }
    },
    "base64": {
      "match": "(base64)(,)([A-Za-z0-9+/=]+)$",
      "captures": {
        "1": {
          "name": "constant.language.uri.scheme"
        },
        "2": {
          "name": "punctuation.separator.uri"
        },
        "3": {
          "name": "meta.data.raw.uri"
        }
      }
    },
    "query": {
      "match": "([?&])([^=]+)(=)([^&#]+)",
      "captures": {
        "1": {
          "name": "keyword.operator.uri.query"
        },
        "2": {
          "name": "entity.name.uri.query.key"
        },
        "3": {
          "name": "punctuation.separator.uri"
        },
        "4": {
          "name": "string.value.uri.query.value"
        }
      }
    },
    "fragment": {
      "match": "(#)(.*)$",
      "captures": {
        "1": {
          "name": "keyword.operator.uri.fragment"
        },
        "2": {
          "name": "comment.uri.fragment"
        }
      }
    }
  },
  "scopeName": "text.uri"
}